<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/hotkey.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.discordkeys.controller.DiscordKeysHotkeyBinder">
    <padding>
        <Insets bottom="10" />
    </padding>
    <center>
        <HBox alignment="CENTER" spacing="25">
            <ToggleButton fx:id="newShortcut" mnemonicParsing="false" onAction="#registerHotkey" prefHeight="25.0" prefWidth="186.0" />
            <TextField prefHeight="25.0" prefWidth="73.0" />
            <ComboBox fx:id="servers" prefHeight="25.0" prefWidth="100.0" />
            <ComboBox fx:id="channels" prefHeight="25.0" prefWidth="100.0" />
        </HBox>
    </center>
</BorderPane>
