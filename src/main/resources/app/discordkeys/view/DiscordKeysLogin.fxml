<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="349.8" prefWidth="358.8" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.discordkeys.controller.DiscordKeysController">
    <padding>
        <Insets bottom="10" />
    </padding>
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="BASELINE_CENTER" spacing="10">
                <Label text="Token" />
                <TextField fx:id="token" prefHeight="25.0" prefWidth="225.0" />
                <Button fx:id="login" mnemonicParsing="false" onAction="#login" text="Set" />
            </HBox>
            <Label fx:id="status" text="Disconnected from Discord" textFill="crimson" />
        </VBox>
   </bottom>

</BorderPane>
